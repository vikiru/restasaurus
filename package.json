{
	"name": "restasaurus",
	"version": "1.0.1",
	"description": "A dinosaur REST API built using Express, MongoDB and Mongoose with comprehensive data for almost 1200 dinosaurs.",
	"private": true,
	"author": "Visakan Kirubakaran",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vikiru/restasaurus.git"
	},
	"keywords": [
		"RESTasaurus",
		"REST",
		"API",
		"MongoDB",
		"Mongoose",
		"Express",
		"Dinosaurs"
	],
	"main": "./app/app.js",
	"scripts": {
		"start": "node .",
		"dev": "cross-env NODE_ENV=development nodemon ./app/**/*.js",
		"test": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/test nyc --reporter=json-summary --reporter=html --reporter=text mocha test/test.js --exit && open-cli ./coverage/index.html",
		"lint": "biome lint",
		"format": "biome check --write",
		"retrieveData": "node ./app/scripts/constructDinoNames.js && node ./app/scripts/retrieveData.js",
		"postData": "node ./app/scripts/postData.js",
		"make-badges": "istanbul-badges-readme",
		"prepare": "husky"
	},
	"dependencies": {
		"@mongodb-js/zstd": "^1.2.2",
		"body-parser": "^1.20.3",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.1",
		"express-validator": "^7.3.1",
		"helmet": "^7.2.0",
		"mongodb": "^6.21.0",
		"mongoose": "^8.20.1",
		"mongoose-autopopulate": "^1.2.1",
		"mongoose-hidden": "^1.9.1",
		"mongoose-sequence": "^6.0.1",
		"morgan": "^1.10.1",
		"node-html-parser": "^6.1.13",
		"redis": "^4.7.1",
		"serve-favicon": "^2.5.1",
		"snappy": "^7.3.3",
		"winston": "^3.18.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@semantic-release/git": "^10.0.1",
		"chai": "^4.5.0",
		"chai-http": "^4.4.0",
		"cross-env": "^5.2.1",
		"esm": "^3.2.25",
		"husky": "^9.1.7",
		"istanbul-badges-readme": "^1.9.0",
		"mocha": "^10.8.2",
		"nodemon": "^3.1.11",
		"nyc": "^15.1.0",
		"open-cli": "^8.0.0",
		"proxyquire": "^2.1.3",
		"semantic-release": "^25.0.2",
		"sinon": "^17.0.1"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github"
		]
	},
	"ignorePatterns": [
		"./node_modules/**",
		"./.github/**"
	],
	"engines": {
		"node": ">=16.9"
	}
}
