{
	"name": "restasaurus",
	"version": "1.0.0",
	"description": "A dinosaur REST API built using Express, MongoDB and Mongoose with comprehensive data for almost 1200 dinosaurs.",
	"private": true,
	"author": "Visakan Kirubakaran",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vikiru/restasaurus.git"
	},
	"keywords": [
		"REST",
		"API",
		"MongoDB",
		"Mongoose",
		"Express",
		"Dinosaurs"
	],
	"main": "./app/app.js",
	"scripts": {
		"start": "node .",
		"dev": "cross-env NODE_ENV=development nodemon ./app/**/*.js",
		"test": "cross-env NODE_ENV=testing nyc --reporter=json-summary --reporter=html --reporter=text mocha test/test.js && open-cli ./coverage/index.html",
		"lint": "eslint ./app/**/*.js --fix-dry-run",
		"prettier": "eslint --fix && prettier --write .",
		"retrieveData": "node ./app/scripts/constructDinoNames.js && node ./app/scripts/retrieveData.js",
		"postData": "node ./app/scripts/postData.js",
		"make-badges": "istanbul-badges-readme"
	},
	"dependencies": {
		"@mongodb-js/zstd": "^1.2.0",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"mongodb": "^6.3.0",
		"mongoose": "^8.1.2",
		"mongoose-autopopulate": "^1.1.0",
		"mongoose-hidden": "^1.9.1",
		"mongoose-sequence": "^6.0.0",
		"morgan": "^1.10.0",
		"node-html-parser": "^6.1.12",
		"redis": "^4.6.12",
		"serve-favicon": "^2.5.0",
		"snappy": "^7.2.2",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"chai": "^4.3.10",
		"chai-http": "^4.4.0",
		"cross-env": "^5.1.6",
		"eslint": "^8.56.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-comment-length": "^1.7.3",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.0.2",
		"eslint-plugin-mocha": "^10.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^2.1.0",
		"eslint-plugin-sort-exports": "^0.8.0",
		"esm": "^3.2.25",
		"istanbul-badges-readme": "^1.8.5",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.3",
		"nyc": "^15.1.0",
		"open-cli": "^8.0.0",
		"prettier": "^3.2.4",
		"prettier-plugin-jsdoc": "^1.3.0",
		"proxyquire": "^2.1.3",
		"sinon": "^17.0.1"
	},
	"ignorePatterns": [
		"./node_modules/**",
		"./.github/**"
	],
	"engines": {
		"node": ">=16.9"
	}
}
