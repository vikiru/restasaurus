{
	"name": "restasaurus",
	"version": "1.0.0",
	"description": "A dinosaur REST API built using Express, MongoDB and Mongoose with comprehensive data for almost 1200 dinosaurs.",
	"private": true,
	"author": "Visakan Kirubakaran",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vikiru/restasaurus.git"
	},
	"keywords": [
		"RESTasaurus",
		"REST",
		"API",
		"MongoDB",
		"Mongoose",
		"Express",
		"Dinosaurs"
	],
	"main": "./app/app.js",
	"scripts": {
		"start": "node .",
		"dev": "cross-env NODE_ENV=development nodemon ./app/**/*.js",
		"test": "cross-env NODE_ENV=testing nyc --reporter=json-summary --reporter=html --reporter=text mocha test/test.js --exit && open-cli ./coverage/index.html",
		"lint": "biome lint",
		"format": "biome check --write",
		"retrieveData": "node ./app/scripts/constructDinoNames.js && node ./app/scripts/retrieveData.js",
		"postData": "node ./app/scripts/postData.js",
		"make-badges": "istanbul-badges-readme"
	},
	"dependencies": {
		"@mongodb-js/zstd": "^1.2.0",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"mongodb": "^6.3.0",
		"mongoose": "^8.1.1",
		"mongoose-autopopulate": "^1.1.0",
		"mongoose-hidden": "^1.9.1",
		"mongoose-sequence": "^6.0.1",
		"morgan": "^1.10.0",
		"node-html-parser": "^6.1.12",
		"redis": "^4.6.12",
		"serve-favicon": "^2.5.0",
		"snappy": "^7.2.2",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"chai": "^4.3.10",
		"chai-http": "^4.4.0",
		"cross-env": "^5.1.6",
		"esm": "^3.2.25",
		"istanbul-badges-readme": "^1.8.5",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.3",
		"nyc": "^15.1.0",
		"open-cli": "^8.0.0",
		"proxyquire": "^2.1.3",
		"sinon": "^17.0.1"
	},
	"ignorePatterns": [
		"./node_modules/**",
		"./.github/**"
	],
	"engines": {
		"node": ">=16.9"
	}
}
